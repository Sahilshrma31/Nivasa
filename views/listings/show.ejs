<% layout("/layouts/boilerplate") %>

<script>
  const mapToken = "<%= process.env.MAP_TOKEN %>";
  const listing = <%- JSON.stringify(listing) %>;
</script>

<!-- Main Content -->
<div class="container my-5">
  <div class="row justify-content-center">

    <!-- Title -->
    <div class="col-12 col-md-8 text-center mt-4">
      <h3><%= listing.title %></h3>
    </div>

    <!-- Listing Card -->
    <div class="col-12 col-md-6 d-flex justify-content-center mt-4">
      <div class="card w-100 show-card listing-card">
        <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top show-img rounded" alt="Listing Image">

        <div class="card-body">
          <p class="card-text text-muted text-center mb-4">
            <i>Owned by: <%= listing.owner.username %></i>
          </p>

          <div class="text-start">
            <p class="card-text"><strong>Description:</strong> <%= listing.description %></p>

            <p class="card-text"><strong>Price:</strong> ₹
              <% if (listing.price) { %>
                <%= listing.price.toLocaleString("en-IN") %>
              <% } else { %>
                N/A
              <% } %>
            </p>

            <p class="card-text"><strong>Location:</strong> <%= listing.location %></p>
            <p class="card-text"><strong>Country:</strong> <%= listing.country %></p>
          </div>

          <!-- Booking / Payment Button -->
          <% if (!currUser) { %>
            <p class="text-center mt-4">
              <a href="/login" class="btn btn-outline-primary">Login to Book This Listing</a>
            </p>
          <% } else if (isOwner) { %>
            <div class="d-flex justify-content-center mt-3 gap-3">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display: inline;">
                <button class="btn btn-dark">Delete</button>
              </form>
            </div>
          <% } else if (hasBooked) { %>
            <div class="text-center mt-4">
              <p class="text-success fw-semibold">You’ve already booked this listing.</p>
            </div>
          <% } else { %>
            <div class="text-center mt-4">
              <p><strong>Ready to book this amazing place?</strong></p>
              <form id="paymentForm">
                <input type="hidden" name="amount" value="<%= listing.price %>">
                <button type="button" class="btn btn-success btn-lg" id="rzp-button">
                  Book Now - Pay ₹<%= listing.price.toLocaleString("en-IN") %>
                </button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <!-- NEW ROW: Review Section (Below listing) -->
  <div class="row justify-content-center mt-5">
    <div class="col-12 col-md-6">
      <% if (currUser) { %>
        <hr />
        <h4 class="mb-4 text-center">Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
          <div class="mb-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
              <% for (let i = 1; i <= 5; i++) { %>
                <input type="radio" id="first-rate<%= i %>" name="review[rating]" value="<%= i %>" />
                <label for="first-rate<%= i %>" title="<%= ['Terrible','Not good','Average','Very good','Amazing'][i-1] %>"><%= i %> star</label>
              <% } %>
            </fieldset>
          </div>

          <div class="mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="5" required></textarea>
            <div class="invalid-feedback">Please add some comments for the review.</div>
          </div>

          <div class="text-center">
            <button type="submit" class="btn btn-light text-dark border">Submit Review</button>
          </div>
        </form>
      <% } %>

      <hr class="my-4" />

      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <div class="row justify-content-center">
          <p class="text-center"><b>All Reviews</b></p>
          <% for (let review of listing.reviews) { %>
            <div class="card review-card col-10 col-md-11 mx-auto my-2">
              <div class="card-body">
                <h5 class="card-title"><%= review.author.username %></h5>
                <p class="card-text"><%= review.comment %></p>
                <fieldset class="starability-result" data-rating="<%= review.rating %>"></fieldset>
                <% if (currUser && (currUser._id.toString() === review.author._id.toString() || isOwner)) { %>
                  <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                <% } %>
              </div>
            </div>
          <% } %>
        </div>
      <% } else { %>
        <p class="text-center text-muted">No reviews yet. Be the first to review!</p>
      <% } %>
    </div>
  </div>

  <!-- Map Section -->
  <div class="row justify-content-center mt-5">
    <div class="col-12 text-center mb-4">
      <h3>Where You Will Be</h3>
    </div>
    <div class="col-12 col-md-10">
      <div class="map-wrapper mb-5">
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>

<!-- Razorpay Checkout.js -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>
  const paymentForm = document.getElementById("paymentForm");
  const button = document.getElementById("rzp-button");

  if (button) {
    button.onclick = async function (e) {
      e.preventDefault();
      button.disabled = true;
      button.textContent = "Processing...";

      try {
        const amount = <%= JSON.stringify(listing.price) %>;

        const res = await fetch("/payments/create-order", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ amount }),
        });

        if (!res.ok) throw new Error("Failed to create order");

        const order = await res.json();

        const options = {
          key: "<%= razorpayKeyId %>",
          amount: order.amount,
          currency: "INR",
          name: "Nivasas",
          description: "Booking Payment for <%= listing.title %>",
          order_id: order.id,
          handler: async function (response) {
            try {
              const bookingRes = await fetch("/bookings", {
                method: "POST",
                headers: { "Content-Type": "application/json" },
                body: JSON.stringify({
                  listingId: "<%= listing._id %>",
                  razorpayPaymentId: response.razorpay_payment_id,
                  razorpayOrderId: response.razorpay_order_id,
                }),
              });

              if (bookingRes.ok) {
                alert("Payment Successful! Booking confirmed.");
                window.location.href = "/bookings/mine";
              } else {
                alert("Payment successful but booking failed. Please contact support.");
              }
            } catch (error) {
              console.error("Booking error:", error);
              alert("Payment successful but booking failed. Please contact support.");
            }
          },
          prefill: {
            name: "<%= currUser ? currUser.username : 'Guest User' %>",
            email: "<%= currUser && currUser.email ? currUser.email : 'guest@example.com' %>",
            contact: "9999999999"
          },
          theme: { color: "#3399cc" },
          modal: {
            ondismiss: function () {
              button.disabled = false;
              button.textContent = "Book Now - Pay ₹<%= listing.price.toLocaleString('en-IN') %>";
            }
          }
        };

        const rzp = new Razorpay(options);
        rzp.open();

      } catch (error) {
        console.error("Payment error:", error);
        alert("Failed to initiate payment. Please try again.");
        button.disabled = false;
        button.textContent = "Book Now - Pay ₹<%= listing.price.toLocaleString('en-IN') %>";
      }
    };
  }
</script>

<script src="/js/map.js"></script>
