<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br><br>
    <h3>Create New Listing</h3>
    <form method="POST" action="/listings" enctype="multipart/form-data" novalidate class="needs-validation">
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" placeholder="Enter title" class="form-control" id="title" required />
        <div class="valid-feedback">Looks great!</div>
        <div class="invalid-feedback">Please enter a title.</div>
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="Enter description" class="form-control" id="description" required></textarea>
        <div class="valid-feedback">Looks great!</div>
        <div class="invalid-feedback">Please provide a description.</div>
        <button type="button" id="generateBtn" class="ai-generate-btn">
          <span class="ai-generate-btn__stars">✦ ✧</span>
          <span class="ai-generate-btn__text">Generate AI-Based Description For Your Listing</span>
        </button>
      </div>

      <!-- Image (required now) -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input name="listing[image]" type="file" class="form-control" id="image" required />
        <div class="invalid-feedback">Please upload an image for the listing.</div>
      </div>

      <!-- Price and Country -->
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" type="number" placeholder="Enter price" class="form-control" id="price" required />
          <div class="valid-feedback">Looks great!</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" type="text" placeholder="Enter country" class="form-control" id="country" required />
          <div class="valid-feedback">Looks great!</div>
          <div class="invalid-feedback">Please enter a country.</div>
        </div>
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" type="text" placeholder="Enter location" class="form-control" id="location" required />
        <div class="valid-feedback">Looks great!</div>
        <div class="invalid-feedback">Please provide a location.</div>
      </div>

      <!-- Submit -->
      <br>
      <button class="btn btn-dark add-btn" type="submit">Add</button>
      <br><br>
    </form>
  </div>
</div>

<!-- AI Status Toast -->
<div id="ai-toast" class="ai-toast hidden">
  <div class="ai-toast-icon">⚡</div>
  <div class="ai-toast-body">
    <div class="ai-toast-title">AI limit reached</div>
    <div class="ai-toast-message">
      This application has reached its daily AI usage limit. Please try again later.
    </div>
  </div>
</div>


<script>
  const generateBtn = document.getElementById("generateBtn");
  const btnText = generateBtn.querySelector(".ai-generate-btn__text");
  const descriptionField = document.getElementById("description");
  const toast = document.getElementById("ai-toast");

  function showAiToast() {
    toast.classList.remove("hidden");
    toast.classList.add("show");

    setTimeout(() => {
      toast.classList.remove("show");
      setTimeout(() => toast.classList.add("hidden"), 300);
    }, 5000);
  }

  generateBtn.addEventListener("click", async () => {
    const title = document.getElementById("title").value.trim();
    const location = document.getElementById("location").value.trim();
    const country = document.getElementById("country").value.trim();
    const price = document.getElementById("price").value.trim();

    if (!title || !location || !country || !price) {
      // keep this simple validation inline
      return;
    }

    //  Disable button + show loading
    generateBtn.disabled = true;
    btnText.innerText = "Generating AI description...";
    descriptionField.value = "Generating description, please wait...";

    try {
      const res = await fetch("/listings/generate-description", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ title, location, country, price }),
      });

      const data = await res.json();

      if (data.success) {
        descriptionField.value = data.description;
      } else if (data.reason === "QUOTA_EXCEEDED") {
        descriptionField.value = "";
        showAiToast(); 
      } else {
        descriptionField.value = "";
      }
    } catch (err) {
      console.error(err);
      descriptionField.value = "";
    } finally {
      //  Cooldown to avoid quota abuse
      setTimeout(() => {
        generateBtn.disabled = false;
        btnText.innerText = "Generate AI-Based Description For Your Listing";
      }, 6000);
    }
  });

  // Bootstrap validation
  (function () {
    'use strict';
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  })();
</script>
